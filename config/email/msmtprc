# -*- mode: Conf -*-
# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-bundle.crt
logfile        ~/.msmtp.log

timeout        10

# Gmail
account        gmail
host           smtp.gmail.com
port           587
from           jeetelongname@gmail.com
user           jeetelongname
passwordeval   "pass show email/gmail.com"
